{
  "name": "bloom",
  "private": true,
  "description": "Multi-agent task orchestrator with YAML-based task management",
  "bin": {
    "bloom": "./src/cli.ts"
  },
  "scripts": {
    "bloom": "bun src/cli.ts",
    "start": "bun src/cli.ts run",
    "plan": "bun src/cli.ts plan",
    "dashboard": "bun src/cli.ts dashboard",
    "test": "bun test",
    "lint": "biome lint ./src ./tests",
    "lint:fix": "biome lint --write ./src ./tests",
    "format": "biome format ./src ./tests",
    "format:fix": "biome format --write ./src ./tests",
    "check": "biome check ./src ./tests",
    "fix": "biome check --write ./src ./tests",
    "typecheck": "tsc --noEmit",
    "validate": "bun run check && bun run typecheck && bun run test",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run fix && git add -u"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "simple-git-hooks": "^2.13.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/confirm": "^6.0.4",
    "@inquirer/input": "^5.0.4",
    "@inquirer/search": "^4.1.0",
    "@inquirer/select": "^5.0.4",
    "@xterm/headless": "^6.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
}
