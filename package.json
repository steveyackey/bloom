{
  "name": "bloom",
  "private": true,
  "description": "Multi-agent task orchestrator with YAML-based task management",
  "bin": {
    "bloom": "./src/cli.ts"
  },
  "scripts": {
    "bloom": "bun src/cli.ts",
    "start": "bun src/cli.ts run",
    "plan": "bun src/cli.ts plan",
    "dashboard": "bun src/cli.ts dashboard",
    "test": "bun test",
    "lint": "biome lint ./src ./tests",
    "lint:fix": "biome lint --write ./src ./tests",
    "format": "biome format ./src ./tests",
    "format:fix": "biome format --write ./src ./tests",
    "check": "biome check ./src ./tests",
    "fix": "biome check --write ./src ./tests",
    "typecheck": "tsc --noEmit",
    "validate": "bun run fix && bun run typecheck && bun run test",
    "prepare": "simple-git-hooks",
    "package": "bun build --compile ./src/cli.ts --outfile dist/bloom",
    "install:local": "bun run package && rm -f ~/.local/bin/bloom && mkdir -p ~/.local/bin && cp dist/bloom ~/.local/bin/bloom",
    "package:linux-x64": "bun build --compile --target=bun-linux-x64 ./src/cli.ts --outfile dist/bloom-linux-x64",
    "package:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./src/cli.ts --outfile dist/bloom-linux-arm64",
    "package:darwin-x64": "bun build --compile --target=bun-darwin-x64 ./src/cli.ts --outfile dist/bloom-darwin-x64",
    "package:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 ./src/cli.ts --outfile dist/bloom-darwin-arm64",
    "package:windows-x64": "bun build --compile --target=bun-windows-x64 --feature WINDOWS ./src/cli.ts --outfile dist/bloom-windows-x64.exe",
    "package:all": "bun run package:linux-x64 && bun run package:linux-arm64 && bun run package:darwin-x64 && bun run package:darwin-arm64 && bun run package:windows-x64"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run fix && git add -u"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "bun-pty": "^0.4.0",
    "simple-git-hooks": "^2.13.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/confirm": "^6.0.4",
    "@inquirer/input": "^5.0.4",
    "@inquirer/search": "^4.1.0",
    "@inquirer/select": "^5.0.4",
    "@xterm/headless": "^6.0.0",
    "chalk": "^5.6.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "version": "0.1.18"
}
