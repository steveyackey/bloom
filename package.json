{
  "name": "bloom",
  "private": true,
  "description": "Multi-agent task orchestrator with YAML-based task management",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "bloom": "bun --filter @bloom/cli bloom",
    "start": "bun --filter @bloom/cli start",
    "test": "bun --filter @bloom/cli test",
    "lint": "bun --filter @bloom/cli lint",
    "fix": "bun --filter @bloom/cli fix",
    "check": "bun --filter @bloom/cli check",
    "typecheck": "bun --filter @bloom/cli typecheck",
    "validate": "bun run validate:cli && bun run validate:web && bun run validate:docs",
    "validate:cli": "bun --filter @bloom/cli validate",
    "validate:web": "bun --filter @bloom/web validate",
    "validate:docs": "bun --filter @bloom/docs validate",
    "package:all": "bun --filter @bloom/cli package:all",
    "prepare": "bun scripts/install-hooks.ts"
  },
  "version": "0.3.10"
}
